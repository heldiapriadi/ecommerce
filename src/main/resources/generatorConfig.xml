<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="default" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/ecommerce" userId="root"
                        password="">
        </jdbcConnection>
        <javaModelGenerator targetPackage="com.example.ecommerce.bean.model"
                            targetProject="src/main/java/">
            <property name="enableSubPackages" value="false" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <sqlMapGenerator targetPackage="com.example.ecommerce.bean.mapper"
                         targetProject="src/main/resources/">
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.example.ecommerce.bean.mapper"
                             targetProject="src/main/java/">
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>
        <table tableName="custmer" enableCountByExample="true" enableSelectByExample="true" >
            <generatedKey column="customer_id" sqlStatement="JBDC" identity="true" />
        </table>
        <table tableName="product" enableCountByExample="true" enableSelectByExample="true" >
            <generatedKey column="product_id" sqlStatement="JBDC" identity="true" />
        </table>
        <table tableName="order"  enableCountByExample="true" enableSelectByExample="true" >
            <generatedKey column="order_id" sqlStatement="JBDC" identity="true" />
        </table>
        <table tableName="order_item" enableCountByExample="true" enableSelectByExample="true" >
            <generatedKey column="order_item_id" sqlStatement="JBDC" identity="true" />
        </table>
        <table tableName="category" enableCountByExample="true" enableSelectByExample="true" >
            <generatedKey column="category_id" sqlStatement="JBDC" identity="true" />
        </table>
        <table tableName="cart" enableCountByExample="true" enableSelectByExample="true" >
            <generatedKey column="cart_id" sqlStatement="JBDC" identity="true" />
        </table>
        <table tableName="product_category" enableCountByExample="true" enableSelectByExample="true" >
            <generatedKey column="product_category_id" sqlStatement="JBDC" identity="true" />
        </table>
    </context>
</generatorConfiguration>
